Jogador : <input type="text" id="palpiteJ"> <br>

<button onclick = "jogar()"> jogar</button>

<hr>
<p id="resultado"></p>

<script>

function exibeResultado(ola) {
document.getElementById("resultado").innerHTML = ola;
}

function getValor(id){
return document.getElementById(id).value;
}

function jogar(){

msg = "ERRO";

var jogador = parseInt(getValor("palpiteJ")); 

if (jogador >= 0 && jogador <= 5){

var computador = parseInt(Math.random() * 5);

msg = "O Jogador colocou " + jogador + " dedos <br>" +
"O Computador colocou " + computador + " dedos <br>" +
"O ganhador foi o: ";

var soma = jogador + computador;

if (soma % 2 == 0){
msg = msg + "Jogador";
}
else{
msg = msg + "Computador"
}
}
else{
msg = "Jogador, sรณ coloque dedos entra 0..5!!";
}
exibeResultado(msg);
}



</script>
